<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/chatlist_RL_left"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/chatlist_LL_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chatlist_txt_left_name"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="姓名"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/chatlist_txt_left_to"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:text="对象"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/chatlist_txt_left_message"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/chatlist_LL_left"
            android:padding="5dp"
            android:background="#FDF8D5"
            android:textSize="16sp"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chatlist_txt_left_time"
            android:layout_width="wrap_content"
            android:textColor="@color/yellow"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:layout_alignParentLeft="true"
            android:text="时间"
            android:layout_below="@id/chatlist_txt_left_message"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/chatlist_RL_right"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/chatlist_LL_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chatlist_txt_right_to"
                android:layout_width="wrap_content"
                android:textColor="@color/blue"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:text="对象"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/chatlist_txt_right_name"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="姓名"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/chatlist_txt_right_message"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:padding="5dp"
            android:layout_below="@id/chatlist_LL_right"
            android:layout_alignParentRight="true"
            android:background="#FDF8D5"
            android:textSize="16sp"
            android:textIsSelectable="true"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/chatlist_txt_right_time"
            android:layout_width="wrap_content"
            android:textColor="@color/yellow"
            android:layout_marginRight="5dp"
            android:layout_below="@id/chatlist_txt_right_message"
            android:layout_alignParentRight="true"
            android:textSize="12sp"
            android:text="时间"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>