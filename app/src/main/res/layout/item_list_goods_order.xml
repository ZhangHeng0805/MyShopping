<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="@drawable/bg_item_list_goods_order"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/Rl_up"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="80dp"
            android:layout_margin="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品名称："
                android:textSize="18sp"
                android:textColor="@color/black_50" />

            <TextView
                android:id="@+id/item_goodsmeunlist_txt_goodsname"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="商品名称："
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="80dp"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态："
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/item_goodsmeunlist_txt_goodsintro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态："
                android:background="@drawable/bg_white_50"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>

        <TextView
        android:id="@+id/item_goodsmeunlist_txt_chen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/LL_num"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="×"/>
        <TextView
        android:id="@+id/item_goodsmeunlist_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_goodsmeunlist_txt_chen"
        android:layout_marginRight="5sp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:text="￥0元"
        />

        <LinearLayout
        android:id="@+id/LL_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_goodsmeunlist_txt_num"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="16sp"/>

    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/LL_Order_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/LL_Order_btn_OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn_skm"
            android:textColor="@color/white"
            android:text="确认收货"/>
        <Button
            android:id="@+id/LL_Order_btn_No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn_2"
            android:textColor="@color/white"
            android:text="退       货"/>
        <Button
            android:id="@+id/LL_Order_btn_Del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:background="@drawable/btn_3"
            android:textColor="@color/white"
            android:text="删除订单"/>
    </LinearLayout>
</LinearLayout>