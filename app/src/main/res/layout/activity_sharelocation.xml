<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareLocationActivity">

    <LinearLayout
        android:id="@+id/m12_LL_Top"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#38ADE2"
        android:layout_height="55dp">
        <TextView
            android:id="@+id/m12_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:background="@drawable/bg_blue"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="共享\n位置"
            android:textColor="@color/cyan"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="0dp"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/location"
                    />
                <TextView
                    android:id="@+id/m12_tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="城市"
                    android:textSize="20dp"
                    android:textColor="@color/yellow"
                    />
                <TextView
                    android:id="@+id/m12_tv_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天气"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/m12_tv_temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="温度"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/white_80"
                    />
                <TextView
                    android:id="@+id/m12_tv_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风向 风力"
                    android:textSize="12dp"
                    android:background="@drawable/bg_white_50"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black_50"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/m12_tv_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="湿度"
                    android:background="@drawable/bg_white_50"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/colorPrimary"
                    />
                <TextView
                    android:id="@+id/m12_tv_reportTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更新时间"
                    android:textSize="10sp"
                    android:background="@drawable/bg_black_10"
                    android:textColor="@color/white_50"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.amap.api.maps.MapView
        android:id="@+id/m12_map"
        android:layout_width="match_parent"
        android:layout_below="@id/m12_LL_Top"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/m12_LL_Top"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/main_fragment_home_cb_switch"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/cb_swith_drawable_selector"
            android:button="@null"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    <LinearLayout
        android:id="@+id/sharelocation_LL_Setup"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <Button
            android:id="@+id/m12_btn_locationtype"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_10"
            android:layout_margin="5dp"
            android:padding="5dp"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:text="定位视角"
            />
        <Button
            android:id="@+id/m12_btn_mapstyle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_10"
            android:layout_margin="5dp"
            android:padding="5dp"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:text="地图样式"
            />
        <Button
            android:id="@+id/m12_btn_downloadmap"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_10"
            android:layout_margin="5dp"
            android:padding="5dp"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:text="下载地图"
            />
        <Button
            android:id="@+id/m12_btn_refresh"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_10"
            android:textColor="@color/cyan"
            android:layout_margin="5dp"
            android:padding="5dp"
            style="@style/TextAppearance.AppCompat.Widget.Button"
            android:text="刷新共享"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/m12_LL_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_50"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/m12_tv_location"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="详情"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/m12_LL_mapstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:paddingTop="5dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_black_10"
        >
        <RadioGroup
            android:id="@+id/m12_rg_mapstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/m12_rb_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="标准"/>
            <RadioButton
                android:id="@+id/m12_rb_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间"/>
            <RadioButton
                android:id="@+id/m12_rb_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卫星"/>
            <RadioButton
                android:id="@+id/m12_rb_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导航"/>
        </RadioGroup>
        <CheckBox
            android:id="@+id/m12_cb_lukuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="显示路况"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/m12_LL_locationtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:background="@drawable/bg_black_10"
        >
        <RadioGroup
            android:id="@+id/m12_rg_locationtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/m12_rb_locationtype_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视角锁定，地图跟随视角"/>
            <RadioButton
                android:id="@+id/m12_rb_locationtype_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视角解锁，地图跟随视角"/>
            <RadioButton
                android:id="@+id/m12_rb_locationtype_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视角解锁，地图不跟随视角"/>
            <RadioButton
                android:id="@+id/m12_rb_locationtype_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="视角锁定，地图不跟随视角"/>

        </RadioGroup>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>