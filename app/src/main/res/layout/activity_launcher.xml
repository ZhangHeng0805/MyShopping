<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_bg_launch"
    tools:context=".LauncherActivity">
<Button
    android:id="@+id/launcher_btn_exit"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_margin="5dp"
    android:text="点击跳过"
    android:textColor="@color/yellow"
    android:background="@drawable/bg_black_10"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:src="@mipmap/logo_min"/>
    <TextView
        android:id="@+id/launcher_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:textStyle="bold"
        android:ems="1"
        android:textColor="@color/white"
        android:lineHeight="50dp"
        android:text="@string/launch_title"
        />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:text="@string/launch_version"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/launcher_server"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:id="@+id/launcher_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zhangheng_url"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="@color/white_80"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>