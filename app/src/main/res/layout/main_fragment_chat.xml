<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main_chatfragment_my_titlebar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天工具"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/main_chatfragment_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天服务器"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="15dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/main_chatfragment_listview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_above="@id/main_chatfragment_LL_bottom"
        android:layout_below="@id/main_chatfragment_my_titlebar"/>
    <LinearLayout
        android:id="@+id/main_chatfragment_LL_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/main_chatfragment_et_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="@drawable/btn"
            android:hint="@string/main_chatfragment_et_hint"/>
        <Button
            android:id="@+id/main_chatfragment_btn_submit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            />
    </LinearLayout>
</RelativeLayout>