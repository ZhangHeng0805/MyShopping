<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/gray"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main_chatfragment_my_titlebar"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue">
        <Button
            android:id="@+id/main_chatfragment_btn_sharelocation"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:text="位置共享"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天大厅"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/main_chatfragment_txt_title"
            android:layout_width="100dp"
            android:background="@drawable/bg_black_10"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:text="服务器未连接"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/red"/>
    </RelativeLayout>
    <ListView
        android:id="@+id/main_chatfragment_listview_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_above="@id/main_chatfragment_LL_bottom"
        android:layout_below="@id/main_chatfragment_my_titlebar"/>
    <LinearLayout
        android:id="@+id/main_chatfragment_LL_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/main_chatfragment_et_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:padding="10dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:background="@drawable/btn"
            android:hint="@string/main_chatfragment_et_hint"/>
        <Button
            android:id="@+id/main_chatfragment_btn_submit"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_4"
            android:text="发送"
            />
    </LinearLayout>
</RelativeLayout>